{
  "apps": [
    {
      "env": {
        "DEBUG": "koa*,mongoose*,app*",
        "DEBUG_COLORS": 1,
        "MONGOOSE_DISABLE_STABILITY_WARNING": 1,
        "MONGO_URL": "mongodb://127.0.0.1:27017/zhiqian?auto_reconnect=true",
        "NODE_ENV": "development",
        "PORT": 3000
      },
      "env_production": {
        "DEBUG": "",
        "NODE_ENV": "production",
        "PORT": 80
      },
      "ignore_watch": [
        "[\\/\\\\]\\./",
        "node_modules",
        "public",
        "views"
      ],
      "instances": "1",
      "name": "zhiqian",
      "node_args": "--harmony",
      "script": ".",
      "watch": false
    }
  ],
  "author": "colder",
  "bugs": {
    "url": "https://github.com/cncolder/zhiqian/issues"
  },
  "dependencies": {
    "debug": "2",
    "hogan.js": "^3.0.2",
    "koa": "^0.18.1",
    "koa-body-parsers": "^1.0.0",
    "koa-compress": "^1.0.8",
    "koa-json": "^1.1.1",
    "koa-logger": "^1.2.2",
    "koa-polyfills": "^2.0.0",
    "koa-response-time": "^1.0.2",
    "koa-router": "^4.2.0",
    "koa-static": "^1.4.9",
    "koa-views": "^3.0.0",
    "moment": "^2.10.0",
    "mongoose": "^4.0.1",
    "ms": "^0.7.0",
    "mz": "^1.3.0"
  },
  "deploy": {
    "production": {
      "host": "haoduotongshu.com",
      "path": "/root/haoduotongshu.com",
      "post-deploy": "npm i --production && pm2 startOrRestart package.json --env production",
      "ref": "origin/master",
      "repo": "https://github.com/cncolder/zhiqian.git",
      "user": "root"
    }
  },
  "description": "ZhiQian website",
  "devDependencies": {
    "browserify": "9.0.4",
    "gulp": "^3.8.11",
    "gulp-autoprefixer": "^2.1.0",
    "gulp-concat": "^2.5.2",
    "gulp-less": "^3.0.2",
    "gulp-sourcemaps": "^1.5.1",
    "gulp-util": "^3.0.4",
    "pm2": "^0.12.9",
    "vinyl-transform": "^1.0.0"
  },
  "engines": {
    "node": "0.12.x",
    "npm": "2.5.x"
  },
  "homepage": "https://github.com/cncolder/zhiqian",
  "license": "MIT",
  "name": "zhiqian",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cncolder/zhiqian.git"
  },
  "scripts": {
    "deploy": "`npm bin`/pm2 deploy package.json production",
    "start": "node --harmony .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "version": "1.0.0"
}
