{
    "apps": [
        {
            "env": {
                "DEBUG": "koa*,mongoose*,app*",
                "DEBUG_COLORS": 1,
                "HOST": "0.0.0.0",
                "MONGOOSE_DISABLE_STABILITY_WARNING": 1,
                "MONGO_URL": "mongodb://127.0.0.1:27017/zhiqian?auto_reconnect=true",
                "NODE_ENV": "development",
                "PORT": 3000
            },
            "env_production": {
                "DEBUG": "",
                "HOST": "",
                "NODE_ENV": "production",
                "PORT": 8001
            },
            "ignore_watch": [
                "[\\/\\\\]\\./",
                "node_modules",
                "public",
                "views"
            ],
            "instances": "1",
            "name": "zhiqian",
            "script": ".",
            "watch": false
        }
    ],
    "author": "colder",
    "bugs": {
        "url": "https://github.com/cncolder/zhiqian/issues"
    },
    "dependencies": {
        "co-wechat": "2.0.0",
